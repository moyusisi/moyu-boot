<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.moyu.boot.system.mapper.ScopeMapper">

    <!-- 获取分组信息分页列表 -->
    <select id="getScopePage" resultType="com.moyu.boot.system.model.vo.ScopeVO">
        SELECT * FROM sys_scope
        <where>
            <if test="param.name != null and param.name != ''">
                AND name LIKE CONCAT('%', #{param.name}, '%')
            </if>
            <if test="param.code != null and param.code != ''">
                AND code = #{param.code}
            </if>
            <if test="param.orgName != null and param.orgName != ''">
                AND org_name LIKE CONCAT('%', #{param.orgName}, '%')
            </if>
            <if test="param.createTimeRange[0] != null and param.createTimeRange[0] != ''">
                AND create_time &gt;= #{param.createTimeRange[0]}
            </if>
            <if test="param.createTimeRange[1] != null and param.createTimeRange[1] != ''">
                AND create_time &lt;= #{param.createTimeRange[1]}
            </if>
        </where>
    </select>

</mapper>